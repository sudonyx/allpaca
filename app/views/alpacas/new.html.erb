<div class="form-container">
  <h1 class="mb-4">Create a New Alpaca</h1>
  <div class="form-and-img-wrapper">
    <div class="form-section">
      <div class="form-inputs">
        <%= simple_form_for @alpaca, url: alpacas_path, html: { class: "form" } do |form| %>
          <%= form.input :name, label: "Name", input_html: { class: "form-control", data: { img: image_path("alpaca-hat1.jpeg") } } %>
          <%= form.input :colour, label: "Colour", input_html: { class: "form-control", data: { img: image_path("alpaca-hat2.jpeg") } } %>
          <%= form.input :location, label: "Location", input_html: { class: "form-control", data: { img: image_path("alpaca-hat3.jpeg") } } %>
          <%= form.input :hat, collection: ['Trilby', 'Cowboy', 'Wizard Hat', 'Safety Helmet', 'Graduation Cap', 'Pied Piper Hat', 'Crown'], label: "Hat", input_html: { class: "form-control", data: { img: image_path("alpaca-hat4.jpeg") } } %>
          <%= form.input :price_per_night, label: "Price per Night", input_html: { class: "form-control", data: { img: image_path("alpaca-hat5.jpeg") } } %>
          <%= form.input :photo, label: "Photo", as: :file, input_html: { class: "form-control", data: { img: image_path("alpaca-hat6.jpeg") } } %>
          <div class="btn-wrapper">
            <%= form.button :submit, "Create Your Alpaca", class: "btn-green" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="img-section">
      <div class="img-display">
        <img id="dynamic-img" src="<%= image_path('alpaca-hat1.jpg') %>" alt="Dynamic img">
      </div>
    </div>
  </div>
</div>
