<div class="container my-4">
  <h1 class="mb-4">Create a New Alpaca</h1>

  <%= form_with(model: @alpaca, url: alpacas_path, local: true, class: "form") do |form| %>
    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :colour, class: "form-label" %>
      <%= form.text_field :colour, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
     <div class="mb-3">
      <%= form.label :hat, class: "form-label" %>
      <%= form.text_field :hat, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :price_per_night, class: "form-label" %>
      <%= form.text_field :price_per_night, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>
    <div class="btn-wrapper">
      <button type="submit" class="btn-green">Create Your Alpaca</button>
    </div>
  <% end %>
</div>
